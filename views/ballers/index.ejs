<%- include('../partials/header') %>

  <div class="container">
    <div id="search-row" class="row">
      <h2 class="col s4 blue-grey-text text-darken-2">ballers</h2>
      <form action="/ballers" method="GET">
        <div class="col s3 offset-s3">
          <!-- search -->
          <div class="input-field">
            <input id="search" type="search" name="name" placeholder="search name" value="<%= name %>" autocomplete="off">
            <i class="material-icons">close</i>
          </div>
        </div>
        <div class="col s2">
          <p>
            <label for="sort-team">
              <input name="sort" type="radio" id="sort-team" value="team" class="with-gap"
                <%= sortKey === 'team' ? 'checked' : '' %> >
              <span>Sort by team</span>
            </label>
          </p>
          <p>
            <label for="sort-name">
              <input name="sort" type="radio" id="sort-name" value="name" class="with-gap"
                <%= sortKey === 'name' ? 'checked' : '' %> >
              <span>Sort by Name</span>
            </label>
          </p>
        </div>
      </form>
    </div>
    <div class="row">
      <div id="ballers" class="col s12">
        <% ballers.forEach(function(baller) { %>
          <div class="card blue-grey">
            <div class="card-content white-text">
              <div>
                <span class="card-title">
                  
                  <span class="baller-name"><%= baller.name %></span>
                  <img class="avatar" src="<%= baller.avatar %>">
                  <% if (baller.team) { %><span class="badge white"> 
                    TEAM:<%= baller.team %></span><% } %>
                </span>
                <a href="/ballers/<%= baller._id %>">Player Profile</a>
              </div>
              <ul class="collection">
                <% baller.comments.forEach(function(comment) { %>
                  <li class="collection-item blue-grey-text text-darken-2"><%- comment.text %> 
                  
                  </li>
                <% }) %>
              </ul>
              <% if (user) { %>
                <div class="card-action">
                  <form action="/<%= baller._id%>/comments" method="POST">
                    <input type="text" name="text" class="white-text">
                    <button type="submit" class="btn white-text">Add Comment</button>
                  </form>
                </div>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>